<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <org.lenve.customshapeimageview.CustomShapeImageView
            android:id="@+id/iv_userImg"
            app:shape="circle"
            android:padding="5dp"
            android:layout_alignParentLeft="true"
            android:layout_width="46dp"
            android:layout_height="46dp" />
        <TextView
            android:id="@+id/tv_type"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_type"
            android:padding="8dp"
            android:layout_toLeftOf="@id/tv_type"
            android:layout_width="46dp"
            android:layout_height="46dp" />
        <TextView
            android:id="@+id/tv_userName"
            android:layout_toRightOf="@id/iv_userImg"
            android:layout_toLeftOf="@id/iv_type"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_content"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_contentImg"
        android:visibility="gone"
        android:padding="6dp"
        android:layout_width="128dp"
        android:layout_height="128dp" />
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="好笑"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="评论"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="分享"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_share_more"
            android:layout_alignParentRight="true"
            android:src="@drawable/share_more"
            android:layout_width="65dp"
            android:layout_height="65dp" />
        <ImageView
            android:id="@+id/iv_good"
            android:layout_alignParentLeft="true"
            android:src="@drawable/good"
            android:padding="6dp"
            android:layout_width="65dp"
            android:layout_height="65dp" />
        <ImageView
            android:id="@+id/iv_nogood"
            android:layout_toRightOf="@id/iv_good"
            android:src="@drawable/nogood"
            android:layout_width="65dp"
            android:layout_height="65dp" />
        <ImageView
            android:id="@+id/iv_comments"
            android:layout_toRightOf="@id/iv_nogood"
            android:src="@drawable/comments"
            android:layout_width="65dp"
            android:layout_height="65dp" />
    </RelativeLayout>
</LinearLayout>